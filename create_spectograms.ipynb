   "source": [
    "import os\n",
    "import numpy as np\n",
    "import pandas as pd\n",
    "import librosa\n",
    "import librosa.display\n",
    "import matplotlib.pyplot as plt\n",
    "\n",
    "# Replace with your specific filenames and paths\n",
    "csv_filename = 'train_post_competition.csv'\n",
    "audio_files_path = 'audio_train'\n",
    "spectrograms_path = 'Output\\Spectograms'\n",
    "\n",
    "# Read the CSV file into a pandas DataFrame\n",
    "df = pd.read_csv(csv_filename)\n",
    "\n",
    "# Ensure the directory for spectrograms exists\n",
    "os.makedirs(spectrograms_path, exist_ok=True)\n",
    "\n",
    "# Loop through each row of the DataFrame\n",
    "for index, row in df.iterrows():\n",
    "    # Extract the filename and label\n",
    "    audio_filename = row['fname']\n",
    "    label = row['label']\n",
    "    \n",
    "    # Load the audio file\n",
    "    y, sr = librosa.load(os.path.join(audio_files_path, audio_filename))\n",
    "\n",
    "    # Generate a Mel spectrogram\n",
    "    S = librosa.feature.melspectrogram(y=y, sr=sr, n_fft=2048, hop_length=512, n_mels=128)\n",
    "    S_dB = librosa.power_to_db(S, ref=np.max)\n",
    "\n",
    "    # Here, you can specify a colormap of your choice, e.g., 'plasma', 'viridis', 'inferno', 'magma', etc.\n",
    "    colormap = 'plasma' \n",
    "\n",
    "    plt.figure(figsize=(10, 4))\n",
    "    librosa.display.specshow(S_dB, sr=sr, x_axis='time', y_axis='mel', cmap=colormap)\n",
    "    \n",
    "    # Don't display the plot in a window\n",
    "    plt.axis('off')\n",
    "    plt.tight_layout()\n",
    "    plt.margins(0, 0)\n",
    "\n",
    "    # Create a figure and axis to plot the spectrogram\n",
    "    fig, ax = plt.subplots(figsize=(10, 4))  # You can adjust the size as needed\n",
    "    S = librosa.feature.melspectrogram(y=y, sr=sr, n_fft=2048, hop_length=512, n_mels=128)\n",
    "    S_dB = librosa.power_to_db(S, ref=np.max)\n",
    "    img = librosa.display.specshow(S_dB, x_axis='time', y_axis='mel', sr=sr, cmap=colormap, ax=ax)\n",
    "    \n",
    "    \n",
    "    # Define output filename for the spectrogram\n",
    "    # Format: <label>_<audio-filename>.png\n",
    "    spectrogram_filename = f\"{label}_{audio_filename}.png\".replace('.wav', '')\n",
    "    spectrogram_filepath = os.path.join(spectrograms_path, spectrogram_filename)\n",
    "    \n",
    "    # Save the Mel spectrogram to an image file\n",
    "    plt.savefig(spectrogram_filepath, bbox_inches='tight', pad_inches=0.1)\n",
    "    plt.close(fig)  # Close the figure to free memory\n",
    "    \n",
    "print(\"All spectrograms have been saved.\")\n",
    "\n",
    "\n",
   ]
  }
